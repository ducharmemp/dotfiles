#!/usr/bin/env bash
set -eou pipefail

if ! [ -x "$(command -v nix-shell)" ]; then
    sh <(curl -L https://nixos.org/nix/install)
fi

{{ if eq .chezmoi.os "linux" -}}

sudo apt-get install direnv
sudo apt-get install asdf
sudo apt-get install fzf
sudo apt-get update
sudo apt-get install \
    ca-certificates \
    curl \
    gnupg

sudo mkdir -m 0755 -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg

echo \
  "deb [arch="$(dpkg --print-architecture)" signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu \
  "$(. /etc/os-release && echo "$VERSION_CODENAME")" stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

sudo chmod a+r /etc/apt/keyrings/docker.gpg
sudo apt-get update
sudo apt-get update

sudo apt-get install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin

{{ else if eq .chezmoi.os "darwin" -}}

if ! [ -x "$(command -v brew)" ]; then
  echo "Brew not installed, installing..."

  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

brew list direnv || brew install direnv
brew list fzf || brew install fzf
brew list asdf || brew install asdf
brew list docker || brew install docker

softwareupdate --install-rosetta

{{ end -}}

asdf plugin add ruby https://github.com/asdf-vm/asdf-ruby.git || true

if [ -e '/usr/local/opt/fzf/install' ]; then
    /usr/local/opt/fzf/install
fi

if [ -e '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh' ]; then
  . '/nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh'
fi
